<h1>Book detail</h1>
<div>


  <%= link_to user_path(@book.id) do %>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <% end %>

  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>


  <p><%= link_to "Edit", edit_book_path(@book) %></p>
  <p><%= link_to "Destroy", book_path(), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>


</div>


<h1>User info</h1>
<div class="profile-container">
  <!-- image -->
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <!-- name -->
  <p class = "profile-name">name:<%= @user.name %></p>
  <!-- introduction -->
  <p class = "profile-introduction">introduction:<%= @user.introduction %></p>

  <!-- link>>users/edit -->
   <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>



<h1>New book</h1>
<div>
  <%= form_with model:@book, url:books_path, local:true do |f| %>
  <label for="inputTitle">title</label>
   <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  <label for="inputBody">Opinion</label>
   <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion"%>

  <%= f.submit "Create Book" %>
<% end %>
</div>