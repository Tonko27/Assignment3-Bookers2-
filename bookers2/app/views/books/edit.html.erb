<h1>Editing Book</h1>

<%# if @book.errors.any? %>
  <%#= @book.errors.count %>件のエラーが発生しました
  <%# @book.errors.full_messages.each do |message| %>
    <%#= message %>
  <%# end %>
<%# end %>

<div>
  <%= form_with model:@book, url:book_path, local: true do |f| %>
  <p>Title</p><%= f.text_field :title %>
  <p>Opinion</p><%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
 <% end %>

  <p><%= link_to "Show", book_path(@book.id) %></p>
  <p><%= link_to "Back", books_path %></p>
</div>
