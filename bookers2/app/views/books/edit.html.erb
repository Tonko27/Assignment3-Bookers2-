<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Editing Book</h1>
        <%= flash[:success] %>
        <%= flash[:danger] %>

      <% if @book.errors.any? %>
      <p><%= @book.errors.count %>件のエラーが発生しました</p>
      <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>


      <%= form_with model:@book, url:book_path, local: true do |f| %>
        <br>Title</br><%= f.text_field :title %>
        <br>Opinion</br><%= f.text_area :body %>
  
        <p><%= f.submit 'Update Book' %></p>
      <% end %>

      <p><%= link_to "Show", book_path(@book.id) %></p>
      <p><%= link_to "Back", books_path %></p>
    </div>
  </div>
</div>