<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= flash[:success] %>
    <%= flash[:danger] %>
    <h1>User info</h1>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <td><%= current_user.name %></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>introduction</th>
        <td><%= current_user.introduction %></td>
      </tr>
    </tbody>
    </table>
    <%# if @user.id == current_user.id %>
    <div class="row">
      <button type="button" class="btn btn-outline-secondary btn-block fas fa-user-cog">
      <%= link_to "プロフィール編集", edit_user_path(current_user) %>
      </button>
    <%# end %>
</div>

<% if @new_book.errors.any? %>
  <p><%= @new_book.errors.count %>件のエラーが発生しました</p>
  <% @new_bookk.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>New book</h1>
<div class="form">
  <%= form_with model:@new_book,url:books_path, local:true do |f| %>
  <br><label for="inputTitle">title</label></br>
   <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  <br><label for="inputBody">Opinion</label></br>
   <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion"%>

  <%= f.submit "Create Book" %>
  <% end %>
</div>
</div>

    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>


      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
        <tr>
          <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></th>
          <th><%= user.name %></th>
          <th><%= link_to "Show", user_path(user.id) %></th>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>

</div>

</div>












