<h1>Users</h1>
<% @users.each do |user| %>
<div>
  <p>image：<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></p>

  <p>name：<%= user.name %></p>

  <p><%= link_to "Show", user_path(user.id) %></p>

<% end %>

</div>

<h1>User info</h1>
<div class="profile-container">
  <!-- image -->
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <!-- name -->
  <p class = "profile-name">name:<%= current_user.name %></p>
  <!-- introduction -->
  <p class = "profile-introduction">introduction:<%= current_user.introduction %></p>

  <!-- link>>users/edit -->
   <%# if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
  <%# end %>
</div>


<h1>New book</h1>
<div>
  <%= form_with model:@book,url:books_path, local:true do |f| %>
  <label for="inputTitle">title</label>
   <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  <label for="inputBody">Opinion</label>
   <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion"%>

  <%= f.submit "Create Book" %>
  <% end %>
</div>









