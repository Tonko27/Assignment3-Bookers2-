<h1>Books</h1>


  <% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id) do %>
  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <% end %>

  <p>Title：</p><p><%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion：<%= book.body %></p>
  <% if @user.id == current_user.id %>
  <p><%= link_to "Edit", edit_book_path(book.id) %></p>
  <p><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
  <% end %>
</div>
<% end %>


<%= flash[:success] %>
<%= flash[:danger] %>
<h1>User info</h1>
<div class="profile-container">
  <!-- image -->
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <!-- name -->
  <p class = "profile-name">name:<%= @user.name %></p>
  <!-- introduction -->
  <p class = "profile-introduction">introduction:<%= @user.introduction %></p>

  <!-- link>>users/edit -->

    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

</div>

