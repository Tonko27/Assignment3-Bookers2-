<h1>Books</h1>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= flash[:success] %>
<%= flash[:danger] %>
<h2>User info</h2>
<div class="profile-container">
  <!-- image -->
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <!-- name -->
  <p class = "profile-name">name:<%= @user.name %></p>
  <!-- introduction -->
  <p class = "profile-introduction">introduction:<%= @user.introduction %></p>

  <!-- link>>users/edit -->

    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

</div>

<% if @new_book.errors.any? %>
  <p><%= @new_book.errors.count %>件のエラーが発生しました</p>
  <% @new_bookk.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>New book</h1>
<div>
  <%= form_with model:@new_book, url:books_path, local:true do |f| %>
  <label for="inputTitle">title</label>
   <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  <label for="inputBody">Opinion</label>
   <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion"%>

  <%= f.submit "Create Book" %>
<% end %>
</div>




</div>
</div>
</div>
