<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= flash[:success] %>
    <%= flash[:danger] %>
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    <div class="row">
      <button type="button" class="btn btn-outline-secondary btn-block fas fa-user-cog">
      <%= link_to "プロフィール編集", edit_user_path(@user) %>
      </button>
    </div>

<% if @new_book.errors.any? %>
  <p><%= @new_book.errors.count %>件のエラーが発生しました</p>
  <% @new_bookk.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

    <h2>New book</h2>
    <div class="form">
    <%= form_with model:@new_book, url:books_path, local:true do |f| %>
      <br><label for="inputTitle">title</label></br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
      <br><label for="inputBody">Opinion</label></br>
      <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"Opinion"%>

      <%= f.submit "Create Book" %>
    <% end %>
    </div>
  </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>


      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
          <th>
          <%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <% end %>
          </th>
          <th><%= link_to book.title, book_path(book.id) %></th>
          <th><%= book.body %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


</div>


</div>

